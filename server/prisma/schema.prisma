generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Polygon {
    id    Int    @id @default(autoincrement())
    name  String
    coordinates String
    properties Json
    mapbox_id String
    work_session_id String
    work_session WorkSession @relation(fields: [work_session_id], references: [id])
    updated_at DateTime
    created_at DateTime
}

model WorkSession {
    id String @id @default(uuid())
    polygons Polygon[]
    updated_at DateTime
    created_at DateTime
}